---
layout: default
---
<div class="post">

  <div id="profile">
    <div class="row">
      <!-- The profile image -->
      <div class="column" style="width: 40%">
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          <div style="text-align: center;">
            {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class width="50%" alt=page.profile.image
            cache_bust=true %}
          </div>
      </div>
      <!-- The profile information -->
      <div class="column-long" style="width: 60%">
        <div class="blank"></div>
        <h2 class="post-title" style="margin-bottom: 15px;"><span class="font-weight-bold">{{ site.first_name }} {{ site.middle_name }}
        {{ site.last_name }}</span> </h2>
        <h5 style='margin-bottom: 10px;'><span style='font-size: 90%'>{{ site.position }}</span></h5>
        <h5 style='margin-bottom: 10px;'><span style='font-size: 90%'>{{ site.department }}</span></h5>
        <h5 style='margin-bottom: 20px;'><span style='font-size: 90%'>{{ site.institution }}</span></h5>
        <!-- Social -->
        <div class="social">
          <div class="contact-icons">
            <div class="row">
              <div class="column column-22" style="width: 10%">
                <a href="mailto:{{ site.email | encode_email }}" title="email"><i class="fa-solid fa-envelope-open-text fa-xs"></i></a>
              </div>
              <div class="column column-22" style="width: 10%">
                <a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}" title="Google Scholar"><i class="ai ai-google-scholar"></i></a>
              </div>
              <div class="column column-22" style="width: 10%">
                <a href="https://github.com/{{ site.github_username }}" title="GitHub"><i class="fa-brands fa-github fa-sm"></i></a>
              </div>
              <div class="column column-22" style="width: 10%">
                <a href="https://twitter.com/{{ site.x_username }}" title="X"><i class="fa-brands fa-x-twitter fa-sm"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <article>
    <hr class="segmentation-line">
    <h2 style="margin-bottom: 20px;">{{ page.research_interest }}</h2>

    <div class="clearfix">{{ content }}</div>
    <hr class="segmentation-line">

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
      </h2>
      {% include news.liquid limit=false %}
    {% endif %}

    <!-- Latest posts -->
    {% if site.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}
    
    
    <h2 style="margin-bottom: 20px;">{{ page.more_title }}</h2>

    <div class="new-section-content">
      {% capture content_from_include %}
      {% include more.md %}
      {% endcapture %}
      {{ content_from_include | markdownify }}
    </div>

    <!-- Selected papers -->
    <br/>
    <hr class="segmentation-line">
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected Publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}

  </article>
</div>
